@model List<Thamarat.Web.ViewModels.ManageUserRolesViewModel>

<h3>تعديل أدوار: @ViewBag.Email</h3>
<form asp-action="Manage" asp-route-userId="@ViewBag.UserId" method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>الدور</th>
                <th>مفعل</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].RoleName</td>
                    <td>
                        <input asp-for="@Model[i].IsSelected" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">حفظ التعديلات</button>
    <a class="btn btn-secondary" asp-action="Index">رجوع</a>
</form>
