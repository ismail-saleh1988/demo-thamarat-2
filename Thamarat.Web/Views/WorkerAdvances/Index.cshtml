@model IEnumerable<Thamarat.Domain.Entities.WorkerAdvance>

@{
    ViewData["Title"] = "السلف";
}

<h2 class="text-center mt-4">💰 السلف المسجلة</h2>

<div class="d-flex justify-content-between mb-3">
    <a class="btn btn-primary" asp-action="Create">➕ إضافة سلفة</a>
    <h5>إجمالي السلف: <strong>@(ViewBag.TotalAdvance?.ToString("N2") ?? "0.00") جنيه</strong></h5>
</div>

<table class="table table-bordered table-striped text-center">
    <thead class="table-success">
        <tr>
            <th>العامل</th>
            <th>المبلغ</th>
            <th>التاريخ</th>
            <th>من الحساب</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Worker?.Name</td>
                <td>@item.Amount.ToString("N2")</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.CashAccount?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ تعديل</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
