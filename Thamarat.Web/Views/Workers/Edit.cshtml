@model Thamarat.Domain.Entities.Worker

<h2 class="text-center mt-4">✏️ تعديل بيانات العامل</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DailyWage">الأجر اليومي</label>
        <input asp-for="DailyWage" class="form-control" />
        <span asp-validation-for="DailyWage" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StartDate">تاريخ البداية</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">💾 حفظ التعديلات</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ رجوع</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
