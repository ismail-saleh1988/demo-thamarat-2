@model Thamarat.Domain.Entities.Expense

<h2 class="text-center mt-4">➕ إضافة مصروف جديد</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="CashAccountId"></label>
        <select asp-for="CashAccountId" class="form-control" asp-items="ViewBag.CashAccounts">
            <option value="">-- اختر الحساب --</option>
        </select>
        <span asp-validation-for="CashAccountId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">💾 حفظ</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ رجوع</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
